<div class="h-2/3 w-1/4 bg-login-menu rounded-2xl flex flex-col items-center">
  <ion-icon
    name="file-tray-stacked-outline"
    class="text-8xl text-blue-300 my-10"
  >
  </ion-icon>

  <h1 class="text-3xl font-bold text-gray-200 py-2">
    Database Connection Tool
  </h1>
  <p class="text-2xl text-gray-300 opacity-70">Admin Database Tool</p>

  <form action="/login/login" method="POST" class="w-full flex flex-col my-10">
    <div class="w-full flex items-center justify-center my-10">
      <ion-icon name="person-sharp" class="text-3xl text-blue-400 px-2">
      </ion-icon>
      <input
        type="text"
        id="username"
        name="username"
        placeholder="Enter your username"
        class="bg-transparent outline-none border-b-2 p-1 text-lg w-4/5 text-blue-300"
      />
    </div>
    <div class="w-full flex items-center justify-center">
      <ion-icon name="lock-closed" class="text-3xl text-blue-400 px-2">
      </ion-icon>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Enter your password"
        class="bg-transparent outline-none border-b-2 p-1 text-lg w-4/5 text-blue-300"
      />
    </div>
    <div class="w-full flex items-center justify-center my-10">
        <button type="submit" class="text-2xl bg-blue-400 text-gray-200 px-8 py-1.5 rounded-2xl"> Login </button>
    </div>
  </form>
</div>