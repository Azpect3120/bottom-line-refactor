<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <title>BLBS: Accounts</title>
</head>
<body>

    <!-- Body -->
    <div class="w-full h-fit bg-x-theme-background">

        <!-- Sidebar -->
        <%- include("partials/sidebar", { user }) %>

        <!-- Client Table -->
        <div class="w-5/6 flex justify-center ml-auto py-8">
            <div class="w-full flex flex-col items-center">
                <div>
                    <h1> Search Bar Here </h1>
                </div>
                <table class="text-sm text-x-theme-text-base border rounded-lg bg-x-theme-border overflow-hidden w-1/2 border-collapse">
                    <tr class="text-left text-base border border-x-theme-border rounded-2xl bg-x-theme-popup-background">
                        <th class="px-6 py-2">
                            Client Name
                        </th>
                        <th class="px-6 py-2">
                            Actions
                        </th>
                    </tr>
                    <% for (const client of clients) { %>
                        <tr class="border border-x-theme-border bg-x-theme-popup-background">
                            <td class="px-6 py-4">
                                <%- client.name %>
                            </td>
                            <td class="px-6 py-4 text-base">
                                <ion-icon name="create-outline"></ion-icon>
                                <ion-icon name="trash"></ion-icon>
                            </td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>




    </div>
    


    <!-- Icon imports -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>